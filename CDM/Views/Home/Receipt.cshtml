@model CDM.Models.OrderSummary

@{
    ViewBag.Title = "Receipt";
}
<link href="https://cdn.jsdelivr.net/npm/fastbootstrap@2.2.0/dist/css/fastbootstrap.min.css" rel="stylesheet" integrity="sha256-V6lu+OdYNKTKTsVFBuQsyIlDiRWiOmtC8VQ8Lzdm2i4=" crossorigin="anonymous">
<style>
    main {
        font-family: "Jost", sans-serif;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
        overflow: hidden;
        color:black;
    }

    article {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

        article .header {
            display: flex;
            justify-content: center;
            align-items:center;
            flex-flow: column;
            text-align: center
        }

            article .header  p{
                margin: 0;
            }
            article .header h2 {
                margin: 0;
            }
            article .header h1 {
                font-size: 12rem;
                color: rgba(0, 48, 73);
                margin: 0;
            }
            article .header .icon {
                height: 10vh;
                width: auto;
                margin: 3vh;
            }
            
        article .ProductsDetails .SectionHeader {
            display: flex;
        }
        article .ProductsDetails .SectionHeader > b:first-child{
            color: rgba(0, 48, 73);
        }
            article .ProductsDetails .SectionHeader .toright {
                margin-left: auto;
            }

        article .ProductsDetails ul {
            height: 10vh;
            list-style: none;
            overflow-y: scroll;
            margin-bottom: 2vh;

        }
        article .ProductsDetails ul li {
            display: flex;
        }

            article .ProductsDetails ul li .toright {
                margin-left: auto;
            }
      article .ProductsDetails .SectionFooter {
            display: flex;
            margin-bottom: 4vh;
      }
      article .ProductsDetails .SectionFooter > b:first-child {
            color: rgba(0, 48, 73);
      }
        article .ProductsDetails .SectionFooter .toright {
            margin-left: auto;
        }
    article .button{
        width: 100%
    }
        article .button button {
            width: 100%;
            height: 10vh;
            border-radius: 5px;
            border: solid, 2px, rgba(0, 48, 73);
            background-color: rgba(0, 48, 73);
            color: white;
        }

</style>
<article>
    <section class="header">
        <box-icon name='drink'class="icon"></box-icon>
        <p>Your order is being processed....</p>
        <h2>Order Number</h2>
        <h1>@Model.QueueNum</h1>
    </section>
    <section class="ProductsDetails">
        <div class="SectionHeader">
            <b>Order details:</b>
            <b class="toright">Total per product</b>
        </div>
        <ul>
            @foreach (var item in Model.OrderItems)
            {
                <li>
                    <p>
                        @item.Drink<br>
                    Qty. x @item.Quantity
                </p>
                <p class="toright">₱@item.TotalCost</p>

            </li>
        }
        </ul>
        <div class="SectionFooter">
            <b>Total cost:</b>
            <b class="toright">₱@Model.TotalCost</b>
        </div>

    </section>
    <section class="button">
        <button type="button" class="BTN transition ease-in-out delay-150 -translate-y-px-hover duration-300 scale-110-hover" onclick="window.location='@Url.Action("Index","Home")'" id="button">Order Again</button>
    </section>
</article>
<script>
    setTimeout(function () {
    document.getElementById("button").click();
    }, 5000);
</script>
<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>