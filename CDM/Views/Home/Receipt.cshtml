@model CDM.Models.OrderSummary

@{
    ViewBag.Title = "Receipt";
}

<style>
    .center {
        margin: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: solid, 1px;
        border-radius: 15px;
        padding: 100px;
    }
</style>

<div class="center">
    <h2>Receipt</h2>

    <h2>Order Number: @Model.QueueNum</h2>

    <ul>
        @foreach (var item in Model.OrderItems)
        {
            <li>@item.Drink x @item.Quantity - ₱@item.TotalCost</li>
        }
    </ul>

    <p>Total cost - ₱@Model.TotalCost</p>
    <button type="button" class="btn btn-primary" onclick="window.location='@Url.Action("Index","Home")'" id="button">Return to Home</button>
</div>
<script>
    setTimeout(function () {
        document.getElementById("button").click();
    }, 10000);
</script>