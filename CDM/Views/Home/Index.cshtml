@model CDM.Models.CustomerTB
@{
    ViewBag.Title = "Create Order";
}
<link href="https://cdn.jsdelivr.net/npm/fastbootstrap@2.2.0/dist/css/fastbootstrap.min.css" rel="stylesheet" integrity="sha256-V6lu+OdYNKTKTsVFBuQsyIlDiRWiOmtC8VQ8Lzdm2i4=" crossorigin="anonymous">
<style>
    article {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

        article img {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        article form section {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 25px;
        }

            article form section button {
                text-align: center;
                border: solid, 1px;
                border-radius: 10px;
                background-color: white;
                width: 20vw;
                height: 50vh;
            }


                article form section button p {
                    font-family: "Jost", sans-serif;
                    font-optical-sizing: auto;
                    font-weight: 400;
                    font-style: normal;
                    font-size: large;
                    margin: 25px;
                }

                article form section button box-icon {
                    width: 15vw;
                    height: 20vh;
                }

                article form section button:hover {
                    border: solid, 2px, rgba(0, 48, 73);
                    background-color: rgba(0, 48, 73);
                    color: white;
                    fill:white;
                }


</style>
<article>
    <img src="~/Preview.png">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <section>
            @Html.HiddenFor(m => m.CustomerNum, new { id = "CustomerNum" })
            <button class="BTN transition ease-in-out delay-150 -translate-y-px-hover duration-300 scale-110-hover" type="submit" onclick="SetCustomerNum('OR')">
                <box-icon class="icon" name='drink'></box-icon>
                <p>Order a Drink<p>
            </button>
            <button class="BTN transition ease-in-out delay-150 -translate-y-px-hover duration-300 scale-110-hover" type="submit" onclick="SetCustomerNum('CU')">
                <box-icon class="icon" type='solid' name='drink'></box-icon>
                <p>Make a Custom Drink<p>
            </button>
        </section>

    }

</article>

<script type="text/javascript">
    function SetCustomerNum(value) {
        document.getElementById('CustomerNum').value = value;
    }

</script>

<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
