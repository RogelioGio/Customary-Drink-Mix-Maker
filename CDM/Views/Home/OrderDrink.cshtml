@model CDM.Models.OrderSummary
@{
    ViewBag.Title = "Order a Drink";
}


<style>
    .center {
        margin: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: solid, 1px;
        border-radius: 15px;
        padding: 100px;
        
    }
    .div {
        width: 100%;
        height: 100px;
        border: solid, 1px;
        border-radius: 15px;
        position: relative;
        margin: 20px 0px;
        background-color: white;
    }

    .divActive {
        width: 100%;
        height: 100px;
        border: solid, 1px;
        border-radius: 15px;
        position: relative;
        margin: 20px 0px;
        background-color: red;
    }

        .divActive label {
            margin: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            
        }

        .div label {
            margin: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    
</style>

<div class="center container">
    <h2>ORDER PREMADE DRINK</h2>
    
    <form method="post" action="@Url.Action("OrderSummary", "Home")">
        <div class="row">
            <div class="col">
                <ul style="list-style: none;">
                    <h2>Alcoholic Drinks</h2>
                    @foreach (var product in Model.product)
                    {

                        <li>
                            <div class="div" id="parent">
                                <label>
                                    <input type="checkbox" name="selectedDrinks" value="@product.Product_Name" id="id" onchange="onQuantity(this)" /> @product.Product_Name (₱@product.Product_Price)
                                    <input type="text" name="quantities" placeholder="Quantity" id="textbox" value="1" disabled oninput="onlyInt(this)" />
                                </label>
                            </div>
                        </li>

                    }
                </ul>
            </div>
                       
            <div class="col">
                <ul style="list-style: none;">
                    <h2>Add-Ons</h2>
                    @foreach (var product in Model.addon)
                    {

                        <li>
                            <div class="div" id="parent">
                                <label>
                                    <input type="checkbox" name="selectedDrinks" value="@product.Product_Name" id="id" onchange="onQuantity(this)" /> @product.Product_Name (₱@product.Product_Price)
                                    <input type="text" name="quantities" placeholder="Quantity" id="textbox" value="1" disabled oninput="onlyInt(this)" />
                                </label>
                            </div>
                        </li>

                    }
                </ul>
            </div>
        </div>
        <input type="hidden" id="fetchdata">
        <button type="button" class="btn btn-primary" onclick="window.location='@Url.Action("Index", "Home")'">Back</button>
        <button type="submit" class="btn btn-primary">Next</button>

    </form>


</div>

<script>
    function onQuantity(checkbox) {
        var quantityInput = checkbox.nextElementSibling;
        quantityInput.disabled = !checkbox.checked;
        if (!checkbox.checked) {
            quantityInput.value = "";
        }
    }

    function onlyInt(input) {
        input.value = input.value.replace(/[^0-9]/g, '');
    }

   
</script>

