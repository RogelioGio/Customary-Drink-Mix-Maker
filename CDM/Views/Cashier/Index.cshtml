@model CDM.Models.OrderTB

@{
    ViewBag.Title = "Cashier Panel";
}
<link href="https://cdn.jsdelivr.net/npm/fastbootstrap@2.2.0/dist/css/fastbootstrap.min.css" rel="stylesheet" integrity="sha256-V6lu+OdYNKTKTsVFBuQsyIlDiRWiOmtC8VQ8Lzdm2i4=" crossorigin="anonymous">

<style>
    .center {
        margin: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: solid, 1px;
        border-radius: 15px;
        padding: 100px;
        width: 60%;
        height: 70%;
    }

    .center_middle {
        margin: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
    }

    button.btn.btn-primary.btn-lg {
        width: 100px;
        height: 100px;
        font-size: 25px;
    }

    input.input {
        padding: 20px;
        font-size: 51px;
        margin: 50px 0px;
    }
    input.btn {
        font-size: 30px;
        padding: 10px;
        width: 100%;
        height: auto;
    }
    div.col-md-6 {
        text-align: center;
    }

    div.numpad-container {
        margin: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    div.row 
    {
        align-items: center;
        justify-content:center;
    }

    
</style>

<div class="center">
    <div class="container">
        <form action="@Url.Action("Search", "Cashier")" method="get">
            <div class="row center_middle">
                <div class="col-md-6">
                    <p>
                        <h4> Enter the Order Number:</h4>
                        <input type="text" name="searchItem" id="numpad-input" class="input" readonly /><br />
                        <input type="submit" value="Take the Order" class="btn btn-primary btn-lg"> <br />
                    </p>
                </div>
                <div class="col position-relative">
                    <p>
                        <div class="numpad-container container">
                            <div class="row">
                                <button type="button" onclick="addToTextBox('1')" class="btn btn-primary btn-lg">1</button>
                                <button type="button" onclick="addToTextBox('2')" class="btn btn-primary btn-lg">2</button>
                                <button type="button" onclick="addToTextBox('3')" class="btn btn-primary btn-lg">3</button>
                            </div>
                            <div class="row">
                                <button type="button" onclick="addToTextBox('4')" class="btn btn-primary btn-lg">4</button>
                                <button type="button" onclick="addToTextBox('5')" class="btn btn-primary btn-lg">5</button>
                                <button type="button" onclick="addToTextBox('6')" class="btn btn-primary btn-lg">6</button>
                            </div>
                            <div class="row">
                                <button type="button" onclick="addToTextBox('7')" class="btn btn-primary btn-lg">7</button>
                                <button type="button" onclick="addToTextBox('8')" class="btn btn-primary btn-lg">8</button>
                                <button type="button" onclick="addToTextBox('9')" class="btn btn-primary btn-lg">9</button>
                            </div>
                            <div class="row">
                                <button type="button" onclick="clearTextBox()" class="btn btn-primary btn-lg">Clr</button>
                                <button type="button" onclick="addToTextBox('0')" class="btn btn-primary btn-lg">0</button>
                                <button type="button" onclick="deleteLast()" class="btn btn-primary btn-lg">Del</button>
                            </div>


                        </div>
                    </p>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    function addToTextBox(value) {
        var textBox = document.getElementById('numpad-input');
        textBox.value += value;
    }

    function clearTextBox() {
        var textBox = document.getElementById('numpad-input');
        textBox.value = '';
    }

    function deleteLast() {
        var textBox = document.getElementById('numpad-input');
        textBox.value = textBox.value.slice(0, -1);
    }
</script>

<style>
    .numpad-container {
        display: inline-block;
        text-align: center;
        margin: 0 auto;
    }

        .numpad-container button {
            width: 60px;
            height: 60px;
            font-size: 24px;
            margin: 5px;
            cursor: pointer;
        }

        .numpad-container .control-buttons {
            width: calc(60px * 3 + 10px * 2);
            display: flex;
            justify-content: space-between;
        }
</style>

<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
