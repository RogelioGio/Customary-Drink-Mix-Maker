@model CDM.Models.AdminRecordViewModel

@{
    ViewBag.Title = "TotalSales";
    var TotalCost = 0;
    if (Model.order != null)
    {
        TotalCost = Model.order.Sum(o => o.TotalCost) ?? 0;
    }
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>TotalSales</h1>
@using (Html.BeginForm("TotalSales", "Admin", FormMethod.Get))
{
    <label>From Date:</label>
    @Html.TextBox("fromDate", null, new { type = "date" })

    <label>To Date:</label>
    @Html.TextBox("toDate", null, new { type = "date" })

    <input type="submit" value="Filter" />
}
<table class="table">
<tr>
    <th>
        Order Description
    </th>
    <th>
        Total Cost
    </th>
    <th></th>
</tr>
@foreach (var item in Model.order)
{
    <tr>
        <td>@item.OrderDesc</td>
        <td>@item.TotalCost</td>
    </tr>
}    
<tr>
    <td><h2>Total Income:   </h2></td>
    <td><p>@TotalCost
    <td></td>
</tr>
</table>

